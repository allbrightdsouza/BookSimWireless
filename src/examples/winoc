//8X8 mesh with 20 flits per packet under injection mode
//injection rate here is packet per cycle, NOT flit per cycle

// Topology

topology = wmesh;
k = 16;
n = 2;
m = 8; 
// Routing
routing_function = dor;

// Flow control
num_vcs     = 5; //For use_read_write, the number of VC's has to be 16
vc_buf_size = 5;
received_queue_size = 16;


wait_for_tail_credit = 1;



// Router architecture
vc_allocator = islip;
sw_allocator = islip;
alloc_iters  = 1;

credit_delay   = 1;
routing_delay  = 2;
vc_alloc_delay = 1;
sw_alloc_delay = 1;

input_speedup     = 2;
output_speedup    = 1;
internal_speedup  = 1.0;


// Traffic
traffic = uniform;
packet_size = 4;


// Simulation
sim_type = latency;

injection_rate = 0.001;

mcast_switch = 1;

//mcast_injection_rate = 0.03; //deprecated

mcast_percent = 10;

num_mcast_dests = 8;

use_read_write = 0; //Number of VC's(num_vcs) must be 16 if set to 1
read_reply_size = 2;
write_reply_size = 2;

//latency_thres = 20000.0;

watch_flits = 307;
watch_out = ./watch_folder/flit_307.txt;
